Algoritmo ejercicio3
	Escribir "***Programa para clacular el area de un rectangulo***";
	Definir base, altura, area Como Real;
	Escribir "Digite la base del rectangulo (en centimetros): ", sin saltar;
	Leer base;
	Escribir "Digite la altura del rectangulo (en centimetros): ", sin saltar;
	Leer altura;
	area <- base*altura;
	Escribir "El area del rectangulo es: ", area;
FinAlgoritmo
